<div class="panel panel-primary">
	<div class="panel-heading">
		<i class="fa fa-building"> <strong><?php echo $this->translate('Company Information') ?></strong></i>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-lg-6">
				<div class="form-group">
					<label><?php echo $this->translate('Position') ?> </label> 
					<input id="position" name="position" ng-model="employer.position" type="text" class="form-control" value="{{employer.position}}">
				</div>

			</div>
			<div class="col-lg-6">
				<div class="form-group">
					<label><?php echo $this->translate('Company') ?> </label> 
					<select class="form-control required" id="company" name="company" ng-model="employer.company">
						<option ng-repeat="company in companies" value="{{company.id}}" ng-select="employer.company.id==company.id">{{company.name}}</option>
					</select> <span class="help-block m-b-none"> &nbsp;Not in the
						list? Please <a data-toggle="modal" class="text-info"
						href="#modal-company">create a new company</a>.
					</span>
				</div>
			</div>
		</div>
	</div>
</div>